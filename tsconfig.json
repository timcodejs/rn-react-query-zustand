{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"],
      "@Assets/*": ["Assets/*"],
      "@Components/*": ["Components/*"],
      "@Navigation/*": ["Navigation/*"],
      "@Screens/*": ["Screens/*"],
      "@Store/*": ["Store/*"],
      "@Utility/*": ["Utility/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext"
  },
  "extends": "@tsconfig/react-native/tsconfig.json",
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
